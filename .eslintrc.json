{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error",
        "no-control-regex": 0
    },
    "globals": {
        "__dirname": "readonly",
        "test": "writable",
        "process": "readonly",
        "console": "readonly",
        "describe": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "it": "readonly",
        "jest": "readonly",
        "expect": "readonly",
        "Buffer": "readonly"
    }
}
